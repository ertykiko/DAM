<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TicTacToe Game"
        android:id="@+id/HomeHead"
        android:textAlignment="center"
        android:textSize="30sp"
        />



    <Button
        android:id="@+id/SinglePlayer"
        android:layout_below="@+id/HomeHead"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:text="@string/singleButton"
        android:textAllCaps="false"
        />

    <Button android:id="@+id/MultiPlayer"
        android:text="@string/multiButton"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/SinglePlayer"
        android:layout_height="70dp"
        android:layout_width="200dp"
        android:textAllCaps="false"
        />



</RelativeLayout>